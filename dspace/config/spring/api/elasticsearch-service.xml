<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config /> <!-- allows us to use spring annotations in beans -->
    
    <bean class="org.dspace.app.elasticsearch.service.impl.ElasticsearchIndexQueueServiceImpl" />

    <bean class="org.dspace.app.elasticsearch.service.ElasticsearchItemBuilder">
         <constructor-arg>
			<map>
				<entry key="Publication" value-ref= "referCrosswalkElasticsearchPublication" />
				<entry key="Person" value-ref= "referCrosswalkElasticsearchPerson" />
			</map>
		</constructor-arg>
	</bean>

    <bean class="org.dspace.app.elasticsearch.externalservice.ElasticsearchProvider">
        <constructor-arg>
			<map>
				<entry key="" value= "" />
			</map>
		</constructor-arg>
	</bean>

    <bean class="org.dspace.app.elasticsearch.externalservice.ElasticsearchConnectorImpl">
        <property name="user" value="${elasticsearch.clientId}" />
        <property name="password" value="${elasticsearch.password}" />
        <property name="url" value="${elasticsearch.url}" />
    </bean>

    <bean class="org.dspace.app.elasticsearch.externalservice.ElasticsearchIndexProvider" />

</beans>