<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="directorioCommunityFilter" class="org.dspace.content.authority.SimpleQueryCustomAuthorityFilter">
        <constructor-arg name="customQueries">
            <list>
                <value>location.comm:${directorios.community-id}</value>
            </list>
        </constructor-arg>
        <property name="supportedEntities">
            <list>
                <value>Person</value>
                <value>Project</value>
                <value>Funding</value>
                <value>OrgUnit</value>
                <value>Publication</value>
                <value>Patent</value>
                <value>Equipment</value>
            </list>
        </property>
    </bean>

    <bean id="onlyCvPersonFilter" class="org.dspace.content.authority.SimpleQueryCustomAuthorityFilter">
        <constructor-arg name="customQueries">
            <list>
                <value>search.entitytype:CvPerson</value>
            </list>
        </constructor-arg>
        <property name="supportedEntities">
            <list>
                <value>CvPerson</value>
            </list>
        </property>
    </bean>

    <bean id="peruInstitutionItemsFilter" class="org.dspace.content.authority.PeruItemAuthorityFilter">
        <property name="supportedEntities">
            <list>
                <value>InstitutionPerson</value>
                <value>InstitutionProject</value>
                <value>InstitutionFunding</value>
                <value>InstitutionOrgUnit</value>
                <value>InstitutionPublication</value>
                <value>InstitutionPatent</value>
                <value>InstitutionEquipment</value>
            </list>
        </property>
    </bean>
</beans>