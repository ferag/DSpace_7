    <!-- Submission correction Service Application. Autowired at this time. -->
    <bean id="org.dspace.versioning.ItemCorrectionService"
          class="org.dspace.versioning.ItemCorrectionService"
          scope="singleton">
       <constructor-arg name="correctionRelationshipName" value="isCorrectionOfItem" />
       <constructor-arg name="ignoredMetadataFields" >
            <set>
                <value>dc.date.accessioned</value>
                <value>dc.description.provenance</value>
                <value>dc.date.available</value>
                <value>relationship.type</value>
                <value>dc.identifier.uri</value>
            </set>
        </constructor-arg>
    </bean>

    <!-- Correction Item Provider, defines behavior for replicating
         Item, Metadata, Budles and Bitstreams. Autowired at this time. -->
    <bean id="org.dspace.versioning.ItemCorrectionProvider" class="org.dspace.versioning.ItemCorrectionProvider">
        <property name="ignoredMetadataFields" >
            <set>
				<value>dc.date.accessioned</value>
				<value>dc.date.available</value>
                <value>relationship.type</value>
            </set>
        </property>
        
    </bean>
    
