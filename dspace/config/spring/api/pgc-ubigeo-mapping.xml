<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="ubigeoMapping" class="org.dspace.perucris.externalservices.UbigeoMapping">
        <constructor-arg name="converters">
            <map>
                <entry key="reniec" value-ref="reniecUbigeoMapConverter"/>
                <entry key="sunat" value-ref="sunatUbigeoMapConverter"/>
            </map>
        </constructor-arg>
    </bean>

    <bean name="reniecUbigeoMapConverter" class="org.dspace.util.SimpleMapConverter" init-method="init">
        <property name="converterNameFile" value="mapConverter-reniecUbigeoCodes.properties" />
        <property name="configurationService" ref="org.dspace.services.ConfigurationService" />
        <property name="defaultValue" value="NA"/>
    </bean>

    <bean name="sunatUbigeoMapConverter" class="org.dspace.util.SimpleMapConverter" init-method="init">
        <property name="converterNameFile" value="mapConverter-sunatUbigeoCodes.properties" />
        <property name="configurationService" ref="org.dspace.services.ConfigurationService" />
        <property name="defaultValue" value="NA"/>
    </bean>

</beans>