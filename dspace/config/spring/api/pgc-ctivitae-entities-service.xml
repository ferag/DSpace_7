<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="cvRelatedEntitiesService" class="org.dspace.perucris.ctivitae.CvRelatedEntitiesService">

        <property name="entityToMetadataMap">
            <map>
                <entry key="Publication">
                    <list>
                        <value>dc.contributor.author</value>
                        <value>dc.contributor.editor</value>
                    </list>
                </entry>
                <entry key="Patent">
                    <list>
                        <value>dc.contributor.author</value>
                        <value>dc.contributor.editor</value>
                    </list>
                </entry>
                <entry key="Project">
                    <list>
                        <value>crispj.investigator</value>
                        <value>crispj.coinvestigators</value>
                    </list>
                </entry>
            </map>
        </property>
    </bean>

</beans>